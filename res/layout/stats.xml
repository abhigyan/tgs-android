<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:alignmentMode="alignBounds"
    app:columnCount="4"
    app:columnOrderPreserved="true"
    app:orientation="horizontal"
    app:rowOrderPreserved="true"
    app:useDefaultMargins="true" >

    <android.support.v7.widget.Space
        app:layout_column="0"
        app:layout_columnSpan="3"
        app:layout_gravity="fill"
        app:layout_row="0"
         />

    <TextView
        android:layout_column="0"
        android:layout_gravity="right"
        android:text="@string/down_str" />

    <TextView android:id="@+id/down_speed" />

    <TextView
        android:layout_column="2"
        android:layout_gravity="right"
        android:text="@string/up_str" />

    <TextView android:id="@+id/up_speed" />

    <TextView
        android:layout_column="0"
        android:layout_gravity="right"
        android:text="@string/leech_str" />

    <TextView android:id="@+id/nbr_leech" />

    <TextView
        android:layout_column="2"
        android:layout_gravity="right"
        android:text="@string/seed_str" />

    <TextView android:id="@+id/nbr_seed" />

</android.support.v7.widget.GridLayout>